* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Inter", sans-serif;
}

header {
  width: 100vw;
  background-color: steelblue;
  border: 1px solid black;
  height: 4rem;
}
header .container {
  width: 90%;
  max-width: 1000px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  height: 100%;
  align-items: center;
}
header nav a {
  margin-left: 1rem;
  color: blue;
  font-weight: 700;
}

#about .container {
  width: 90%;
  max-width: 1000px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 30rem;
}
#about .container > * {
  border: 3px solid red;
}
#about .container .info {
  width: 47%;
}
#about .container .info h2 {
  color: blue;
  margin-bottom: 1rem;
}
#about .container .info p {
  margin-bottom: 1rem;
}
#about .container .info .actions button {
  margin-right: 1rem;
  background: maroon;
  color: white;
  padding: 0.3rem 0.6rem;
  border: none;
  border-radius: 0.3rem;
}
#about .container .image {
  width: 47%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
#about .container .image figure {
  border: 1px solid red;
  width: 70%;
}
#about .container .image figure img {
  width: 100%;
  /*ocupe el 100% de su contenedor*/
  max-width: 100%;
  border-radius: 50%;
}